{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    //"verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "newLine": "lf",

    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist/",
    "sourceMap": true,

    "lib": ["es2022"]
  },
  "include": ["*.ts", "node_modules\\@*\\types-*\\*.d.ts"]
}
