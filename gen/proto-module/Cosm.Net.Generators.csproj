<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
	  <LangVersion>latest</LangVersion>
	  <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
	  <Nullable>enable</Nullable>
	  <IsRoslynComponent>true</IsRoslynComponent>
  </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.7.0" PrivateAssets="all" />
		<PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4" PrivateAssets="all">
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\common\Cosm.Net.Generators.Common.csproj" />
	  <ProjectReference Include="..\..\src\core\Cosm.Net.Core.csproj" />
	</ItemGroup>

	<PropertyGroup>
		<GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPaths</GetTargetPathDependsOn>
	</PropertyGroup>

	<Target Name="GetDependencyTargetPaths">
		<ItemGroup>
			<TargetPathWithTargetPlatformMoniker 
				Include="..\..\..\src\core\bin\$(Configuration)\netstandard2.0\Cosm.Net.Core.dll" 
				IncludeRuntimeDependency="false" />
		</ItemGroup>
		<ItemGroup>
			<TargetPathWithTargetPlatformMoniker 
				Include="..\..\..\gen\common\bin\$(Configuration)\netstandard2.0\Cosm.Net.Generators.Common.dll"
				IncludeRuntimeDependency="false" />
		</ItemGroup>
	</Target>

</Project>
